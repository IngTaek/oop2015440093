import java.util.Scanner;

public class Conditional_statement {

	public static void main(String[] args) {
		int score;
		System.out.print("성적을 입력하세요 : ");
		Scanner input = new Scanner(System.in);    // 다음에 설명할 것임.
		score = input.nextInt(); // 키보드에 숫자 입력
		
		System.out.println("성적은 " + score + "점입니다.");
		
		//성적이 60점 이상이면 "합격입니다.", 60점 미만이면 "불합격입니다." 를 출력
		// 비교 >, =, : 관계 연산자
		// if (조건식) {참일 경우 수행} else {거짓일 경우 수행}
		if (score >= 60)
		{
			System.out.print("합격입니다.");
			System.out.print("축하드립니다.");
		}
		else
		{
			System.out.print("불합격입니다.");
		}

	}

}
