
public class Loop {

	public static void main(String[] args) {
		// 1~10 정수를 화면에 출력
		
		int i;    // i는 루프변수
		int sum;
		
		
		i = 1;    // 1. 루프변수 초기화
		sum = 0;
		
		while(i<=10)   // 2. 루프조건식
		{
			sum = sum+i;
			System.out.println(sum);   // 3. 루프문
			i++;       // 4. 루프변수 변화
		}
		System.out.println("================프로그램 종료=================");

	}

}
